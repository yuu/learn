{% extends "layout.html.twig" %}

{% block title %}お問い合わせ{{ parent() }}{% endblock %}

{% block body %}
<section id="home" class="head-main-img">
    <div class="container">
        <div class="row text-center pad-row">
            <div class="col-md-10 col-md-offset-1">
                <h1><span class="back_light">お問い合わせ</span></h1>
            </div>
        </div>
    </div>
</section>

<section id="inquiry-sec">
    <div class="container">
        <div class="row pad-row">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <table class="table">
                <tr>
                    <th><i class="fa fa-circle"></i>name</th>
                    <td>
                        {{ form_widget(form.name, {"attr": {"class": "form-control"}}) }}
                        {{ form_errors(form.name) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i>mail address</th>
                    <td>
                        {{ form_widget(form.email, {"attr": {"class": "form-control"}}) }}
                        {{ form_errors(form.email) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle-o"></i>phone number</th>
                    <td>
                        {{ form_widget(form.tel, {"attr": {"class": "form-control"}}) }}
                        {{ form_errors(form.tel) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i>kind</th>
                    <td>
                        {{ form_widget(form.type, {"attr": {"class": "form-control"}}) }}
                        {{ form_errors(form.type) }}
                    </td>
                </tr>
                <tr>
                    <th><i class="fa fa-circle"></i>content</th>
                    <td>
                        {{ form_widget(form.content, {"attr": {"class": "form-control"}}) }}
                        {{ form_errors(form.content) }}
                    </td>
                </tr>
            </table>
            <div class="text-center">
                {{ form_widget(form.submit, {"class": "btn btn-primary"}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}