{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug on Mac",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/electron/dist/Electron.app/Contents/MacOS/Electron",
            "runtimeArgs": [
                "${workspaceRoot}",
                "--enable-logging",
                "--remote-debugging-port=9222"
             ],
             "sourceMaps": false
        }
    ]
}